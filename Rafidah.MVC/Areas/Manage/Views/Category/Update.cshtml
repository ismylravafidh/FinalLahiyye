@using Rafidah.Business.ViewModels.Category
@model CategoryUpdateVm
<div class="container">
    <h1>Update Category</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Name</label>
            <input asp-for="CategoryName" type="text" class="form-control">
            <span asp-validation-for="CategoryName" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>